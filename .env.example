# Base application configuration
NODE_ENV=development
NEXT_PUBLIC_APP_URL=http://localhost:3000

# PostgreSQL (Neon/Railway compatible) connection string
# Format: postgresql://USER:PASSWORD@HOST:PORT/DATABASE?sslmode=require
DATABASE_URL=

# NextAuth secrets and URLs
NEXTAUTH_SECRET=
NEXTAUTH_URL=http://localhost:3000/api/auth

# SMTP provider for transactional email (Proton, Resend, Postmark, etc.)
EMAIL_FROM=proctoring@example.com
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=

# AWS credentials scoped to the media upload bucket
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1
AWS_S3_BUCKET=

# Comma-separated list of origins allowed to request S3 upload URLs
# Include both staging and production Vercel domains
S3_UPLOAD_ALLOWED_ORIGINS=https://staging.example.com,https://app.example.com

# Recording retention windows (in days)
RETENTION_DAYS_RECORDINGS=30
RETENTION_DAYS_FLAGS=90

# Optional build metadata injected by CI/CD
GIT_SHA=
BUILD_TIMESTAMP=
